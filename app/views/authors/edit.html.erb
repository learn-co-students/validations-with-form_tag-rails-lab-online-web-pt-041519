<%= form_tag author_path(@author), method: "patch" do %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @author.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field <%= ' field_with_errors' if @author.errors[:name].any?%>">
    <%= label_tag "name", "Title" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field <%= ' field_with_errors' if @author.errors[:email].any?%>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field <%= ' field_with_erors' if @author.errors[:phone_number].any?%>">
    <%= label_tag "phone_number", "Phone Number" %>
    <br />
    <%= text_area_tag "phone_number", @author.phone_number %>
  </div>
  <%= submit_tag "Update" %>
<% end %>